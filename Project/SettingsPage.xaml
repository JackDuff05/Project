<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.SettingsPage"
             BackgroundColor="Black"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="Auto, *, Auto" 
          Padding="20">

        <Label Grid.Row="0"
               Text="SETTINGS"
               FontSize="36"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center"
               Margin="0,40,0,40"/>

        <VerticalStackLayout Grid.Row="1"
                           VerticalOptions="Center"
                           Spacing="20">

            <Frame BackgroundColor="#222222"
                   BorderColor="White"
                   CornerRadius="10"
                   Padding="20"
                   HasShadow="False">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Current High Score"
                           FontSize="18"
                           TextColor="Gray"
                           HorizontalOptions="Center"/>
                    <Label x:Name="HighScoreDisplay"
                           Text="0"
                           FontSize="32"
                           FontAttributes="Bold"
                           TextColor="Yellow"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>

            <Button x:Name="ResetButton"
                    Text="RESET HIGH SCORE"
                    FontSize="20"
                    FontAttributes="Bold"
                    BackgroundColor="DarkRed"
                    TextColor="White"
                    WidthRequest="300"
                    HeightRequest="60"
                    CornerRadius="10"
                    Clicked="OnResetButtonClicked"/>

        </VerticalStackLayout>

        <Button Grid.Row="2"
                x:Name="BackButton"
                Text="BACK TO MENU"
                FontSize="18"
                FontAttributes="Bold"
                BackgroundColor="#444444"
                TextColor="White"
                WidthRequest="250"
                HeightRequest="60"
                CornerRadius="10"
                HorizontalOptions="Center"
                Margin="0,0,0,20"
                Clicked="OnBackButtonClicked"/>

    </Grid>

</ContentPage>